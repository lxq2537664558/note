		[disable_web_page_preview]	bool 			是否禁止网站预览
		[disable_notification] 		bool 			是否是无声模式

		[reply_to_message_id] 		int 			回复消息唯一 id
		[reply_markup] 				 				回复标志


		// 连接里面使用  tg://user?id=<user_id>   联系人信息 		


